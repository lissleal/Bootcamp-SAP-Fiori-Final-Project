<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
         id="DialogMaterial"
        title="Detalles del Material"
        stretch="false"
        afterClose="onDialogClose"
    >
        <content>
            <f:SimpleForm
               editable="false"
                layout="ColumnLayout"
                title="Información del Material"
            >
                <f:content>
                    <Label text="ID" />
                <Text id="txtProductID" text="" />

                <Label text="Nombre" />
                <Text id="txtProductName" text="" />

                <Label text="Categoría" />
                <Text id="txtCategory" text="" />

                <Label text="Cantidad por Unidad" />
                <Text id="txtQperUnit" text="" />

                <Label text="Precio Unitario" />
                <Text id="txtUnitPrice" text="" />

                <Label text="Unidades en Stock" />
                <Text id="txtUnitsInStock" text="" />

                <Label text="Unidades en Order" />
                <Text id="txtUnitsOnOrder" text="" />
                </f:content>
                
            </f:SimpleForm>
        </content>
        <buttons>
            <Button text="Cerrar" press="onDialogMaterialClose" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
