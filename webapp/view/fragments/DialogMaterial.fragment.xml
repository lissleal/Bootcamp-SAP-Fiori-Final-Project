<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
         id="DialogMaterial"
        title="{i18n>textMaterialDetails}"
        stretch="false"
        afterClose="onDialogClose"
    >
        <content>
            <f:SimpleForm
               editable="false"
                layout="ColumnLayout"
            >
                <f:content>
                    <Label text="{i18n>textMaterialID}" />
                <Text id="txtProductID" text="" />

                <Label text="{i18n>textProductName}" />
                <Text id="txtProductName" text="" />

                <Label text="{i18n>textMaterialCategory}" />
                <Text id="txtCategory" text="" />

                <Label text="{i18n>textQtyPerUnit}" />
                <Text id="txtQperUnit" text="" />

                <Label text="{i18n>textUnitPrice}" />
                <Text id="txtUnitPrice" text="" />

                <Label text="{i18n>TextUnitsInStock}" />
                <Text id="txtUnitsInStock" text="" />

                <Label text="{i18n>textUnitsOnOrder}" />
                <Text id="txtUnitsOnOrder" text="" />
                </f:content>
                
            </f:SimpleForm>
        </content>
        <buttons>
            <Button text="{i18n>btnClose}" press="onDialogMaterialClose" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
