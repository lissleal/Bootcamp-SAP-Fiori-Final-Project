<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="NewItemDialog1"
        title="{i18n>newItemDialogTitle}"
        icon="sap-icon://activity-items"
        busy="false"
        busyIndicatorDelay="0"
        class="sapUiSizeCompact"
    >
        <content>
            <f:SimpleForm
                editable="true"
                id="ListForm1"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="4"
                adjustLabelSpan="false"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
                width="30rem"
            >
                <f:content />
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button
                visible="true"
                text="{i18n>newItemDialogCreateBtn}"
                type="Emphasized"
                press=".onPressSaveData"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>newItemDialogCloseButton}"
                press=".onCloseAddItemDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
