<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
         id="DialogNewMaterial"
        title="NuevoProducto"
        stretch="false"
        afterClose="onDialogClose"
    >
        <content>
            <f:SimpleForm
               editable="true"
                layout="ColumnLayout"
                title="Ingrese los datos"
            >
            <Label text="ID del Producto:" />
                <Input id="inputProductID" value="{LocalDataModel>/inputProductID}"/>
              <Label text="Nombre del Producto:" />
                <Input id="inputProductName" value="{LocalDataModel>/inputProductName}"/>

                <Label text="Precio Unitario:" />
                <Input id="inputUnitPrice" type="Number" value="{LocalDataModel>/inputUnitPrice}"/>

                <Label text="Unidades en Stock:" />
                <Input id="inputUnitsInStock" type="Number" value="{LocalDataModel>/inputUnitsInStock}"/>
                
            </f:SimpleForm>
        </content>
        <buttons>
                        <Button text="Guardar" type="Accept" press="onSaveNewProduct" />
            <Button text="Cancelar" type="Reject" press="onDialogClose" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>