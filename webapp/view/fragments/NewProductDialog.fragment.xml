<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="DialogNewMaterial"
        title="NuevoProducto"
        stretch="false"
        afterClose="onDialogClose"
    >
        <content>
            <f:SimpleForm
                editable="true"
                layout="ColumnLayout"
                title="Ingrese los datos"
            >
                <Label text="Nombre del Producto" />
                <Input
                    id="inputProductName"
                    value="{LocalDataModel>/inputProductName}"
                />

                <Label text="Precio Unitario" />
                <Input
                    id="inputUnitPrice"
                    type="Number"
                    value="{LocalDataModel>/inputUnitPrice}"
                />

                    <Label text="{i18n>combobox2ID}" />
                    <ComboBox
                        id="combobox2ID"
                        selectionChange="onSelectionChange"
                        items="{
					path: '/Categories',
					sorter: { path: 'CategoryName'                     }
				}"
                    >
                        <core:Item
                            key="{CategoryID}"
                            text="{CategoryName}"
                        />
                    </ComboBox>

                <Label text="Unidades en Stock" />
                <Input
                    id="inputUnitsInStock"
                    type="Number"
                    value="{LocalDataModel>/inputUnitsInStock}"
                />

                <Label text="Cantidad por Unidad" />
                <Input
                    id="inputQperUnit"
                    value="{LocalDataModel>/inputQperUnit}"
                />

                <Label text="Unidades en Orden" />
                <Input
                    id="inputUnitsOnOrder"
                    type="Number"
                    value="{LocalDataModel>/inputUnitsOnOrder}"
                />
            </f:SimpleForm>
        </content>
        <buttons>
            <Button
                text="Guardar"
                type="Accept"
                press="onSaveNewProduct"
            />
            <Button
                text="Cancelar"
                type="Reject"
                press="onDialogClose"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
