<c:FragmentDefinition
xmlns="sap.m"
xmlns:c="sap.ui.core">
   	 <Table
                inset="false"
                id="SuppliersTable"
                items="{ 
					path:'ProviderCollection>/'
				}"
            >
                <columns>
                    <Column>
                        <Text text="{i18n>CompanyName}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>ContactTitle}" />
                    </Column>

                    <Column>
                        <Text text="{i18n>ContactName}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>City}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        vAlign="Middle"
                        press="onItemPress"
                        type="Active"
                    >
                        <cells>
                            <ObjectIdentifier
                                title="{ProviderCollection>SuppierID}"
                                text="{ProviderCollection>CompanyName}"
                            />
                            <Text text="{ProviderCollection>ContactTitle}" />
                            <Text text="{ProviderCollection>ContactName}" />
                            <Text text="{ProviderCollection>City}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
</c:FragmentDefinition>