<c:FragmentDefinition
xmlns="sap.m"
xmlns:c="sap.ui.core"
xmlns:st="sap.ui.comp.smarttable"
xmlns:t="sap.ui.table"

>


<st:SmartTable
    id="ST_ORDER_D"
    entitySet="Products"
    tableBindingPath="Products"
    initiallyVisibleFields="ProductID,ProductName,UnitPrice,UnitsInStock"
    tableType="ResponsiveTable"
    enableExport="true"
    useVariantManagement="false"
    useTablePersonalisation="true"
    header="{i18n>Products}"
    showRowCount="true"
    showFullScreenButton="true"
    enableAutoBinding="true"
    enableAutoColumnWidth="true"
    editTogglable="false"
>

                <st:customToolbar >
                	<OverflowToolbar>
        <Button text="Agregar Producto" icon="sap-icon://add" press="onHandleNewProduct"/>
            		</OverflowToolbar>
                </st:customToolbar >

<Table
            id="tableProducts"
            mode="SingleSelectLeft"
            selectionChange="onMaterialSelect"
        >
        </Table>
            </st:SmartTable>
</c:FragmentDefinition>