<mvc:View
    controllerName="com.bootcamp.sapui5.providers.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
    <VBox >
        <Toolbar>
            <Label text="{i18n>inputID}" />
            <Input id="inputID" value="{LocalDataModel>/valueInput}"/>

            <Label text="{i18n>comboboxID}" />
            <ComboBox
                id="comboboxID"
                selectionChange="onSelectionChange"
				selectedKey="{LocalDataModel>/selectedKey}"
                items="{
					path: '/Suppliers',
					sorter: { path: 'CompanyName' }
				}"
            >
                <c:Item
                    key="{CompanyName}"
                    text="{CompanyName}"
                />
            </ComboBox>
            <Button
                press="onPress"
                text="{i18n>textBuscar}"
            />
        </Toolbar>
        </VBox>
        <VBox>
           <c:Fragment
			fragmentName="com.bootcamp.sapui5.providers.view.fragments.SuppliersTable"
			type="XML"
			/>
        </VBox>
    </Page>
</mvc:View>
