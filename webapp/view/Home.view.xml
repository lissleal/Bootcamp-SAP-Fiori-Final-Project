<mvc:View
    controllerName="com.bootcamp.sapui5.providers.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.core"
    xmlns="sap.m"
>
    <Page id="page">
        <HBox class="sapUiSmallMargin">
            <HBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Label text="{i18n>inputID}" />
                    <Input
                        id="inputID"
                        showSuggestion="true"
                        suggestionItems="{/Suppliers}"
                        suggestionItemSelected="onSuggestionItemSelected"
                    >
                        <suggestionItems
                        >
                            <c:ListItem
                                additionalText="{SupplierID}"
                                text="{CompanyName}"         
                            />
                        </suggestionItems>
                    </Input>
                </VBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Label text="{i18n>comboboxID}" />
                    <ComboBox
                        id="comboboxID"
                        selectionChange="onSelectionChange"
                        items="{
					path: '/Suppliers',
					sorter: { path: 'Country',
                    group:true
                     }
				}"
                    >
                        <c:Item
                            key="{Country}"
                            text="{City}"
                        />
                    </ComboBox>
                </VBox>
            </HBox>

            <Button
                press="onPress"
                text="{i18n>textBuscar}"
                class="sapUiSmallMarginTop sapUiSmallMarginEnd"
                
            />
            <Button
    press="onClearFilters"
    text="{i18n>textLimpiar}"
                class="sapUiSmallMarginTop"
/>
        </HBox>

        <VBox class="sapUiSmallMargin">
            <c:Fragment
                fragmentName="com.bootcamp.sapui5.providers.view.fragments.SuppliersTable"
                type="XML"
            />
        </VBox>
    </Page>
</mvc:View>
