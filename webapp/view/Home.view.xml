<mvc:View
    controllerName="com.bootcamp.sapui5.providers.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.core"
    xmlns="sap.m"
>
    <Page id="page">
        <HBox class="sapUiSmallMargin">
            <HBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Label text="{i18n>inputID}" />
                    <Input
                        id="inputID"
                        value="{LocalDataModel>/valueInput}"
                    />
                </VBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Label text="{i18n>inputName}" />
                    <Input
                        id="inputName"
                        value="{LocalDataModel>/valueName}"
                    />
                </VBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Label text="{i18n>comboboxID}" />
                    <ComboBox
                        id="comboboxID"
                        selectionChange="onSelectionChange"
                        selectedKey="{LocalDataModel>/selectedKey}"
                        items="{
					path: '/Suppliers',
					sorter: { path: 'Country' }
				}"
                    >
                        <c:Item
                            key="{Country}"
                            text="{Country}"
                        />
                    </ComboBox>
                </VBox>
            </HBox>
            <Button
                press="onPress"
                text="{i18n>textBuscar}"
                class="sapUiSmallMarginTop"
            />            
        </HBox>

        <VBox class="sapUiSmallMargin">
            <c:Fragment
                fragmentName="com.bootcamp.sapui5.providers.view.fragments.SuppliersTable"
                type="XML"
            />
        </VBox>
    </Page>
</mvc:View>
