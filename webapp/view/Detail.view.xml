<mvc:View
    controllerName="com.bootcamp.sapui5.providers.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m"
>
    <Page
        id="pageDetail"
        title="{i18n>titleDetail}"
    >
        <VBox id="dhb_01">
            <f:SimpleForm
                id="SimpleFormDisplay354"
                editable="false"
                layout="ResponsiveGridLayout"
                title="{i18n>Information}"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <f:content>
                    <Label
                        id="ld_01"
                        text="{i18n>CompanyName}"
                    />
                    <Text
                        id="nameText"
                        text="{CompanyName}"
                    />
                    <Label
                        id="ld_02"
                        text="{i18n>ContactName}"
                    />
                    <Text
                        id="td_01"
                        text="{ContactName}"
                    />
                    <Label
                        id="ld_03"
                        text="{i18n>ContactTitle}"
                    />
                    <Text
                        id="td_03"
                        text="{ContactTitle}"
                    />
                    <Label
                        id="ld_04"
                        text="{i18n>Address}"
                    />
                    <Text
                        id="td_04"
                        text="{Address}"
                    />
                    <Label
                        id="ld_05"
                        text="{i18n>City}"
                    />
                    <Text
                        id="td_05"
                        text="{City}"
                    />
                </f:content>
            </f:SimpleForm>
            <smartTable:SmartTable
                id="ST_ORDER_D"
                entitySet="Products"
                tableBindingPath="Products"
                initiallyVisibleFields="ProductID,ProductName,UnitPrice,UnitsInStock"
                tableType="ResponsiveTable"
                enableExport="true"
                useVariantManagement="false"
                useTablePersonalisation="true"
                header="{i18n>Products}"
                showRowCount="true"
                showFullScreenButton="true"
                enableAutoBinding="true"
                class="sapUiResponsiveContentPadding"
                enableAutoColumnWidth="true"
                editTogglable="false"
            >
                <smartTable:customToolbar />
            </smartTable:SmartTable>
        </VBox>
    </Page>
</mvc:View>
